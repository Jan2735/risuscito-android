<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/about_appbarlayout_height">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:collapsedTitleTextAppearance="@style/TextAppearance.Material3.TitleLarge.Collapsed"
            app:contentScrim="?attr/colorSurface"
            app:expandedTitleTextAppearance="@style/TextAppearance.Material3.HeadlineSmall.Expanded"
            app:expandedTitleTextColor="@android:color/transparent"
            app:collapsedTitleTextColor="?colorOnSurface"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:title="@string/changelog">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name"
                android:fitsSystemWindows="true"
                android:scaleType="fitXY"
                app:layout_collapseMode="parallax"
                android:src="@drawable/ic_about_cover" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cover_shadow_color"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax" />

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/risuscito_toolbar"
                style="@style/Widget.Material3.Toolbar.Risuscito.InAppBarLayout"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/RisuscitoToolbarPopup" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_min_margin"
        android:paddingRight="@dimen/activity_min_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/about_subtitle"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/about_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/myListPreferredItemMargin"
            android:layout_marginEnd="@dimen/myListPreferredItemMargin" />

    </LinearLayout>

<!--    <include layout="@layout/common_shadow" />-->

</androidx.coordinatorlayout.widget.CoordinatorLayout>
