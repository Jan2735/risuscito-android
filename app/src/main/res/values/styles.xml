<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ToolbarTheme" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="fontFamily">@font/googlesans_medium</item>
    </style>

    <style name="AdaptiveScrimColor">
        <item name="statusBarScrim">?colorPrimaryVariant</item>
    </style>

    <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse" />

    <style name="TitoloSezione">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textAlignment" tools:targetApi="JELLY_BEAN_MR1">viewStart</item>
        <item name="fontFamily">@font/googlesans_medium</item>
        <item name="android:textColor">?colorSecondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="Risuscito_tabstyle" parent="@style/Widget.MaterialComponents.TabLayout.PrimarySurface">
        <item name="tabGravity">center</item>
        <item name="tabMode">scrollable</item>
        <item name="tabTextAppearance">@style/TextAppearance.MaterialComponents.Button.Risuscito
        </item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Button.Risuscito">
        <item name="fontFamily">@font/googlesans_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ActionBar.TitleText.Collapsed">
        <item name="android:textColor">@color/primary_text_default_material_dark</item>
        <item name="fontFamily">@font/googlesans_medium</item>
    </style>

    <style name="ActionBar.TitleText.Expanded">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="fontFamily">@font/googlesans_medium</item>
    </style>

    <style name="BottomSheet" />

    <style name="BottomSheet.Title">
        <item name="android:textAlignment" tools:ignore="NewApi">viewStart</item>
        <item name="android:singleLine">true</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Text.Headline</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="BottomSheet.GridItemImage">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="BottomSheet.GridItemTitle">
        <item name="android:height">16dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">@style/Text.Hint</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="BottomSheet.GridItem">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="Text" />

    <style name="Text.Headline">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/googlesans_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="Text.Hint">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?android:textColorHint</item>
        <item name="fontFamily">@font/googlesans_regular</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="ThemeOverlay.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="behavior_peekHeight">@dimen/custom_peek_height</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Risuscito.BottomSheet
        </item>
    </style>

    <style name="ShapeAppearanceOverlay.Risuscito.BottomSheet" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/bottom_sheet_corner_radius</item>
        <item name="cornerSizeTopRight">@dimen/bottom_sheet_corner_radius</item>
        <item name="cornerSizeBottomRight">@dimen/mtrl_shape_corner_size_large_component</item>
        <item name="cornerSizeBottomLeft">@dimen/mtrl_shape_corner_size_large_component</item>
    </style>

    <style name="RisuscitoToolbarPopup" parent="ThemeOverlay.AppCompat.DayNight">
        <item name="fontFamily">@font/googlesans_regular</item>
    </style>

    <style name="SuperStateViewSubTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="Widget.MaterialComponents.PopupMenu.Risuscito">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/googlesans_regular</item>
    </style>

    <style name="RisuscitoAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:buttonBarButtonStyle">
            @style/Widget.MaterialComponents.Button.TextButton.Dialog.Risuscito
        </item>
        <item name="android:windowBackground">@drawable/dialog_material_background</item>
    </style>

    <style name="Widget.MaterialComponents.Button.TextButton.Dialog.Risuscito">
        <item name="fontFamily">@font/googlesans_medium</item>
    </style>

